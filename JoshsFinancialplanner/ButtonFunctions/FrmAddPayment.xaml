        <Label Content="Category:" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top"/>
        <Button Content="Add" Click="btnAdd_Click" HorizontalAlignment="Left" Margin="108,160,0,0" VerticalAlignment="Top"
                Height="30" Width="70"
                />
        <TextBox Name="txtDueDate" HorizontalAlignment="Left" Margin="136,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="132"/>
        <TextBox Name="txtAmount" HorizontalAlignment="Left" Margin="188,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="79"/>
        <TextBox Name="txtPaymentName" HorizontalAlignment="Left" Margin="108,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="159"/>
        <ComboBox Name="cmboCategory" HorizontalAlignment="Left" Margin="108,109,0,0" VerticalAlignment="Top" Width="160"/>

    </Grid>
</Window>
